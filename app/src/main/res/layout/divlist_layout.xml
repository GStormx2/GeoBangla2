<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/divlist_layout">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="7dp"
        app:cardCornerRadius="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="#FFFFFF">


    <ImageView
        android:id="@+id/divison_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@color/grey"
        android:contentDescription="just an image"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/division_name"
        android:layout_marginTop="165dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divison_img"

        android:textSize="25sp"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/font_normal"/>
    <TextView
        android:id="@+id/division_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/division_name"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/lato_regular"
        android:textSize="16sp"
        android:paddingBottom="10dp"
        android:textColor="@color/font_normal"/>

    </android.support.v7.widget.CardView>
</RelativeLayout>