<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/explore_divimage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@color/lightGrey"
                android:contentDescription="division image"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/explore_divname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dhaka"
                android:textSize="26sp"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/font_normal"
                android:layout_marginTop="10dp"
                android:layout_below="@id/explore_divimage"
                android:layout_centerInParent="true" />
            <TextView
                android:id="@+id/explore_divdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_desc"
                android:fontFamily="@font/lato_regular"
                android:textSize="17sp"
                android:layout_below="@id/explore_divname"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@id/explore_divdesc"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</android.support.v4.widget.NestedScrollView>